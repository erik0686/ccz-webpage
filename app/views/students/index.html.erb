<div> <%= link_to "+  Nuevo Estudiante", new_student_path, class: "new-student" %></div>
<section class="container">  
  <div id="list_container">
    <section class="row">
      <table class="col-12 show-table">
        <tr>
          <th class="table-header">Nombre</th>
          <th class="table-header">Apellido</th>
          <th class="table-header">Matr√≠cula</th>
          <th class="table-header">Carrera</th>
          <th class="table-header">Fecha de inicio</th>
          <th class="table-header">Fecha de fin</th>
          <th class="table-header">Horas de servicio</th>
          <th class="table-header"></th>
        </tr>
        <% @students.each do |student| %>
          <tr>
            <td class="table_info">
              <%= student.name %>
            </td>
            <td class="table_info">
              <%= student.last_name %>
            </td>
            <td class="table_info">
              <%= student.student_no %>
            </td>
            <td class="table_info">
              <%= student.degree %>
            </td>
            <td class="table_info">
              <%= student.start_of_service %>
            </td>
            <td class="table_info">
              <%= student.end_of_service %>
            </td>
            <td class="table_info">
              <%= student.hours_given %>
            </td>
            <td class="table_info">
              <%= link_to "Delete", student, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-student" %>
            </td>
          </tr>
        <% end %>
      </table>
    </section>
  </div>
</section>